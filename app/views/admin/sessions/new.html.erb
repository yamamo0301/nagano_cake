<div class="container">
  <h2 class="title">管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <table class="field">
    <tr>
      <th><%= f.label :メールアドレス %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email", class: "admin_login_field" %></td>
    </tr>
    <tr>
      <th><%= f.label :パスワード %></th>
      <td><%= f.password_field :password, autocomplete: "current-password", class: "admin_login_field" %></td>
    </tr>
  </table>

  <div class="actions">
    <%= f.submit "ログイン", class: "button" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>
</div>