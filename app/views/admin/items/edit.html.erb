<h2>商品編集</h2>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <label>商品画像</label>
    <%= f.attachment_field :image %>
    <br>
  <label>商品名</label>
    <%= f.text_field :name %>
    <br>
  <label>商品説明</label>
    <%= f.text_area :introduction %>
    <br>
  <label>ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
    <br>
  <label>税抜価格</label>
    <%= f.text_field :price, placeholder:"1000" %>円
    <br>
　<label>販売ステータス</label>
    <div>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>
    </div>
    <div>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </div>
  <br>
　<%= f.submit "変更を保存" %>
<% end %>