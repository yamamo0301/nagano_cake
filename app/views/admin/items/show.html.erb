<div class="container">
  <h2 class="title">商品詳細</h2>

  <div class="item-show">
    <%= image_tag attachment_url(@item, :image, :fill, 300, 300, format: "jpg") %>

    <table>
      <tr><th>商品名</th><td><%= @item.name %></td></tr>
      <tr><th>商品説明</th></th><td><%= @item.introduction %></td></tr>
      <tr><th>ジャンル</th><td><%= @item.genre.name %></td></tr>
      <tr><th>税込価格（税抜価格）</th><td><%= @item.with_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td></tr>
      <tr><th>販売ステータス</th>
        <td><% if @item.is_active == true %>
              <p class="status-true"><strong>販売中</strong></p>
            <% else %>
              <p class="status-false"><strong>販売停止中</strong></p>
            <% end %></td></td></tr>
      <tr><th></th><td><%= link_to "編集する", edit_admin_item_path(@item.id), class: "button2" %></td></tr>
    </table>

  </div>

</div>