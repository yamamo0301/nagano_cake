<h2>商品新規登録</h2>

<%= form_with model: @item, url: admin_items_path, method: :post do |f| %>
  <label>商品画像</label>
    <%= f.attachment_field :image_id %>
    <br>
  <label>商品名</label>
    <%= f.text_field :name, placeholder:"商品名" %>
    <br>
  <label>商品説明</label>
    <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>
    <br>
  <label>ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %>
    <br>
  <label>税抜価格</label>
    <%= f.text_field :price, placeholder:"1000" %>円
    <br>
　<label>販売ステータス</label>
    <div>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, '販売中', value: true %>
    </div>
    <div>
      <%= f.radio_button :is_active, false %>
      <%= f.label :is_active, '販売停止中', value: false %>
    </div>
  <br>
　<%= f.submit "新規登録" %>
<% end %>