<div class="container">
  <h2 class="title"><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</h2>

  <table>
    <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <tr class="customer-edit-record">
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>氏名</th>
        <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>フリガナ</th>
        <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>郵便番号</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>住所</th>
        <td><%= f.text_field :address, class: "address-field" %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>電話番号</th>
        <td><%= f.text_field :telephone_number %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>メールアドレス</th>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>会員ステータス</th>
        <td>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, '有効', value: true %>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, '退会', value: false %>
        </td>
      </tr>
      <tr class="customer-edit-record">
        <th></th>
        <td><%= f.submit "変更を保存", class: "button3" %></td>
      </tr>
    <% end %>
  </table>