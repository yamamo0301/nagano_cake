<div class="container">
  <h2 class="title">注文履歴一覧</h2>

  <table class="items-table public-order-table">
    <thead class="items-column-name">
      <tr>
        <th>注文日</th>
        <th>配送先</th>
        <th>注文商品</th>
        <th>支払金額</th>
        <th>ステータス</th>
        <th>注文詳細</th>
      </tr>
    </thead>
    <tbody class="items-name">
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.created_at.strftime("%Y/%m/%d") %></td>
          <td><%= '〒' + order.postal_code %><br><%= order.address %><br><%= order.name %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <p><%= order_detail.item.name %></p>
            <% end %>
          </td>
          <td><%= order.total_payment.to_s(:delimited) %>円</td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id), class: "button5" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>