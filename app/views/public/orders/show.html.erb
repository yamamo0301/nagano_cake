<h2>注文履歴詳細</h2>

<h3>注文情報</h3>
<table>
  <tr><th>注文日</th></th><td><%= @order.created_at %></td></tr>
  <tr><th>配送先</th><td><%= '〒' + @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td></tr>
  <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
  <tr><th>ステータス</th><td><%= @order.status_i18n %></td></tr>
</table>

<h3>請求情報</h3>
<table>
  <tr><th>商品合計</th></th><td><%= @order.total_payment - @order.shipping_cost %></td></tr>
  <tr><th>配送料</th><td><%= @order.shipping_cost %></td></tr>
  <tr><th>ご請求額</th><td><%= @order.total_payment %></td></tr>
</table>

<h3>注文内容</h3>
<table>
  <thead>
    <tr>
      <th>商品</th>
      <th>単価（税込）</th>
      <th>個数</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_details.each do |order_detail| %>
      <tr>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %></td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price * order_detail.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>