<h2>注文情報確認</h2>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
      </tr>
      <% @total_price += cart_item.subtotal %>
    <% end %>
  </tbody>
</table>

<table>
  <tr><th>送料</th><td><%= @order.shipping_cost %></td></tr>
  <tr><th>商品合計</th><td><%= @total_price %></td></tr>
  <tr><th>請求金額</th><td><%= @order.shipping_cost + @total_price%></td></tr>
</table>

<h3>支払い方法</h3>
  <p><%= @order.payment_method_i18n %></p>

<h3>お届け先</h3>
  <p><%= @order.postal_code + @order.address %></p>
  <p><%= @order.name %></p>
