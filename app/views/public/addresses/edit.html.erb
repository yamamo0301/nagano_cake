<div class="container">
  <h2 class="title">配送先編集</h2>

  <%= form_with model: @address, url: address_path(@address.id), method: :patch do |f| %>
    <table>
      <tr class="customer-edit-record">
        <th>郵便番号(ハイフンなし)</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>住所</th>
        <td><%= f.text_field :address, class: "address-field" %></td>
      </tr>
      <tr class="customer-edit-record">
        <th>宛名</th>
        <td><%= f.text_field :name %></td>
      </tr>
      <tr class="customer-edit-record">
        <th></th>
        <td><%= f.submit '変更内容を保存', class: "button3" %></td>
      </tr>
    </table>
  <% end %>
</div>
