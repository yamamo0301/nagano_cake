<div class="container">
  <div class="item-show">
    <%= image_tag attachment_url(@item, :image, :fill, 300, 225, format: "jpg") %>

    <div class="container4">
      <h2><%= @item.name %></h2>
      <p class="introduction"><%= @item.introduction %></p>
      <h3>¥<%= @item.with_tax_price.to_s(:delimited) %>(税込)</h3>
      <%= form_with model: @cart_item, url: '/cart_items', method: :post do |f| %>
      <%= f.hidden_field :item_id, :value => "#{@item.id}" %>
      <%= f.select :amount, *[1..10], prompt: '選択してください' %>
      <%= f.submit "カートに入れる", class: "button3" %>
    <% end %>
    </div>

  </div>
</div>