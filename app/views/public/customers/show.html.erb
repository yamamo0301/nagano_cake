<div class="container">
  <h2 class="title">マイページ</h2>

  <div class="container3">
    <div class="flex-box">
      <h3>登録情報</h3>
      <p><%= link_to "編集する", edit_customers_path, class: "button3 container5" %></p>
    </div>

  <table class="mypage-table">
    <tr>
      <th class="mypage-column">氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th class="mypage-column">カナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    <tr>
      <th class="mypage-column">郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th class="mypage-column">住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th class="mypage-column">電話番号</th>
      <td><%= @customer.telephone_number %></td>
    </tr>
    <tr>
      <th class="mypage-column">メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
  </table>

    <div class="container4">
      <table>
        <tr>
          <th class="mypage-column">配送先</th>
          <td><%= link_to "一覧を見る", addresses_path, class: "button5" %></td>
        </tr>
        <tr>
          <th class="mypage-column">注文履歴</th>
          <td><%= link_to "一覧を見る", orders_path, class: "button5" %></td>
        </tr>
      </table>
    </div>

  </div>
</div>